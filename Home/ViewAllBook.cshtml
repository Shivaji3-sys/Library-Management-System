
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 20px;
            background-color: #f8f9fa;
            color: #333;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #444;
        }

        .search-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .search-container input[type="text"] {
            padding: 12px;
            width: 50%;
            max-width: 400px;
            border: 1px solid #ccc;
            border-radius: 25px;
            outline: none;
            transition: all 0.3s ease;
        }

        .search-container input[type="text"]:focus {
            border-color: #4CAF50;
            box-shadow: 0 0 5px rgba(76, 175, 80, 0.5);
        }

        #noResults {
            display: none;
            text-align: center;
            color: #d9534f;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            overflow-x: auto;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
            transition: background-color 0.3s ease;
        }

        .action-buttons button {
            padding: 8px 12px;
            margin: 0 5px;
            border: none;
            border-radius: 25px;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .action-buttons button[name="Edit"] {
            background-color: #4CAF50;
            color: white;
        }

        .action-buttons button[name="Delete"] {
            background-color: #f44336;
            color: white;
        }

        .action-buttons button:hover {
            transform: scale(1.05);
            opacity: 0.9;
        }

        @@media (max-width: 768px) {
            table {
                font-size: 14px;
            }

            .search-container input[type="text"] {
                width: 80%;
            }

            .action-buttons button {
                padding: 6px 10px;
                font-size: 12px;
            }
        }
    </style>
    <h2>View All Books</h2>

    <div class="search-container">
        <input type="text"
               id="searchInput"
               onkeyup="searchBook()"
               placeholder="Search for a book by name..." />
    </div>
    <p id="noResults">No results found</p>

    <table>
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Author Name</th>
                <th>Book Publication</th>
                <th>Book Price</th>
                <th>Book Quantity</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.AllBook != null)
            {
                foreach (var item in ViewBag.AllBook)
                {
                    <tr>
                        <td>@item.BookName</td>
                        <td>@item.AuthorName</td>
                        <td>@item.BookPublication</td>
                        <td>@item.BookPrice</td>
                        <td>@item.BookQuantity</td>
                        <td class="action-buttons">
                            <button onclick="window.location.href='@Url.Action("Update", "Home", new { id = @item.BookId })'" name="Edit">Edit</button>
                            <button onclick="window.location.href='@Url.Action("Delete", "Home", new { id = @item.BookId })'" name="Delete">Delete</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <script>
        function searchBook() {
            const searchQuery = document.getElementById("searchInput").value.toLowerCase();
            const rows = document.querySelectorAll("tbody tr");
            let hasResults = false;

            rows.forEach(row => {
                const bookName = row.querySelector("td:first-child").innerText.toLowerCase();
                if (bookName.includes(searchQuery)) {
                    row.style.display = "";
                    hasResults = true;
                } else {
                    row.style.display = "none";
                }
            });

            document.getElementById("noResults").style.display = hasResults ? "none" : "block";
        }
    </script>
